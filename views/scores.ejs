<%- include("partials/header.ejs") -%>
  <link rel="stylesheet" href="/css/scores.css">
  </head>

  <body>
    <div class="container">
      <div id="score-container" class="flex-column flex-center">
  			<h1>High Scores</h1>
  			<a class="btn" href="/">Home</a>
  			<table>
  				<tr>
  					<th>User</th>
  					<th>Score</th>
  				</tr>
          <% for (let i = 1; i <= 10; i++) { %>
            <% if (scores.length >= i) { %>
              <tr>
                <td class="table-username" data-number= <%= i %>> <%- scores[i-1].name %> </td>
                <td class="table-score" data-number= <%= i %>> <%- scores[i-1].value %> </td>
              </tr>
            <% } else { %>
              <tr>
                <td class="table-username" data-number= <%= i %>>N/A</td>
                <td class="table-score" data-number= <%= i %>>N/A</td>
              </tr>
            <% } %>
          <% } %>
  			</table>
  		</div>
    </div>
  </body>
</html>
